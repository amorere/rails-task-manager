<div class="mx-auto" style="width: 200px;">

  <h1> My Tasks </h1>
    <div class="form-check" >
        <% @tasks.each do |task|%>
        <input class="form-check-input" type="checkbox" id="check1" name="option1" value="something" checked>
        <label class="form-check-label"><%= link_to task.title, show_path(task)%></label>


      <p> <%= link_to "Actualizar tarea", edit_path(task)%> </p>
        <%end%>
      </div>
    <p> <%= link_to "Agregar tarea", new_path()  %> </p>
</div>
